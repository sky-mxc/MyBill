<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="@dimen/choose_head_img_width"
    android:layout_height="@dimen/choose_head_img_height"
    android:background="@drawable/drawable_choose_headimg_bg">

    <TextView
        android:id="@+id/choose_camera"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="相机"
        android:textSize="18sp"
        android:textColor="@color/colorGrayDark"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:drawableRight="@drawable/drawable_line_bg"/>

   <TextView
        android:id="@+id/choose_photo"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="相册"
        android:textSize="18sp"
        android:textColor="@color/colorGrayDark"
        android:gravity="center"
       android:clickable="true"
       android:layout_gravity="center"/>


</LinearLayout>